<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:digits="0123456789."
            android:ems="10"
            android:id="@+id/result" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    <TextView
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operation" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/newNumber" android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/newNumber"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:digits="0123456789."
            android:ems="10"
            android:id="@+id/newNumber" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result"
            app:layout_constraintStart_toStartOf="@+id/result"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" app:layout_constraintStart_toStartOf="@+id/button1"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintStart_toStartOf="@+id/button4"
            android:layout_marginTop="8dp" android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button1"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button1"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button2"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button7" app:layout_constraintStart_toStartOf="@+id/button7"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button4"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button5"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:width="48dp"
            android:minWidth="48dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/newNumber"
            app:layout_constraintStart_toStartOf="@+id/newNumber"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8" app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button7"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9" app:layout_constraintStart_toEndOf="@+id/button8"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button8"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttondivide" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonmultiply" app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonminus"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonmultiply"
            app:layout_constraintEnd_toEndOf="@+id/buttonmultiply" android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonadd"
            app:layout_constraintEnd_toEndOf="@+id/buttonminus"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonminus" android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttondot" app:layout_constraintStart_toEndOf="@+id/button0"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button0"
            android:width="48dp" android:minWidth="48dp"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonequals" app:layout_constraintStart_toEndOf="@+id/buttondot"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/buttondot"
            android:width="48dp" android:minWidth="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>