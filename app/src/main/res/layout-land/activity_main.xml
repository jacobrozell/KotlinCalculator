<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/result"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginTop="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/operation" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/operation"/>
    <TextView
            android:text="+"
            android:layout_width="8dp"
            android:layout_height="31dp"
            android:gravity="center"
            android:id="@+id/operation"
            tools:layout_editor_absoluteY="16dp" app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.312"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:digits="0123456789."
            android:ems="10"
            android:id="@+id/newNumber"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/operation" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/operation" android:layout_marginStart="8dp"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttondot" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttondot"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button2"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintEnd_toEndOf="@+id/button5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button5"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintStart_toStartOf="@+id/button6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button5"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:width="48dp" android:minWidth="64dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button8"
            app:layout_constraintEnd_toEndOf="@+id/button8"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:width="48dp" android:minWidth="64dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button9"
            app:layout_constraintStart_toStartOf="@+id/button9"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:width="48dp"
            android:minWidth="64dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button8"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:width="48dp" android:minWidth="64dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/operation"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button9"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:width="48dp" android:minWidth="64dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/operation"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/buttonneg"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Neg"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/buttonneg"
            android:width="48dp" android:minWidth="64dp"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/buttonneg"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/buttonneg"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonmultiply"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button6" android:layout_marginStart="8dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonminus"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonadd"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonequals"
            app:layout_constraintStart_toEndOf="@+id/buttonequals" android:layout_marginStart="8dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttondot"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintEnd_toEndOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginTop="8dp"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonequals"
            android:width="48dp" android:minWidth="64dp"
            app:layout_constraintStart_toStartOf="@+id/button3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>